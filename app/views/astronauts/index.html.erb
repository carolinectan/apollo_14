<h1>All Astronauts</h1>

<% @astronauts.each do |astronaut| %>
  <div id="astronaut-<%= astronaut.id %>">
    <p><%=astronaut.name %></p>
    <p><%=astronaut.age %></p>
    <p><%=astronaut.job %></p>
    <p>Missions:</p>
    <% astronaut.missions.alphabetical.each do |mission| %>
    - <%= mission.title %>
    <% end %>
    <p>Total Time in Space: <%= astronaut.missions.total_time_in_space %> days</p>
  </div>
<% end %>

<p>Average Age: <%= @astronauts.average_age %></p>
